class Solution {
public:
    int minOperations(vector<int>& nums) {
        int n = nums.size(), g = nums[0], cnt = 0;
        for (int x : nums) g = gcd(g, x);
        if (g != 1) return -1;
        for (int x : nums) if (x == 1) cnt++;
        if (cnt) return n - cnt;
        int ans = 1e9;
        for (int i = 0; i < n; i++) {
            int g = nums[i];
            for (int j = i + 1; j < n; j++) {
                g = gcd(g, nums[j]);
                if (g == 1) {
                    ans = min(ans, j - i + n - 1);
                    break;
                }
            }
        }
        return ans;
    }
};
