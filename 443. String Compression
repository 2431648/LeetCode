class Solution {
public:
    int compress(vector<char>& chars) {
        int n = chars.size(), write = 0, i = 0;
        while (i < n) {
            char curr = chars[i];
            int count = 0;
            while (i < n && chars[i] == curr) {
                i++;
                count++;
            }
            chars[write++] = curr;
            if (count > 1) {
                string num = to_string(count);
                for (char c : num) chars[write++] = c;
            }
        }
        return write;
    }
};
