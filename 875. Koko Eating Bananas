#include <vector>
#include <algorithm>

class Solution {
public:
    int minEatingSpeed(std::vector<int>& piles, int h) {
        int left = 1;
        int right = *std::max_element(piles.begin(), piles.end());
        int ans = right;

        while (left <= right) {
            int mid = left + (right - left) / 2;
            long long total_hours = 0;

            for (int p : piles) {
                // Ceiling division: (p + mid - 1) / mid
                total_hours += (1LL * p + mid - 1) / mid;
            }

            if (total_hours <= (long long)h) {
                ans = mid;
                right = mid - 1;
            } else {
                left = mid + 1;
            }
        }
        return ans;
    }
};
