#include <vector>
#include <queue>
#include <tuple>

using namespace std;

class Solution {
public:
    long long minCost(int n, vector<vector<int>>& edges) {
        vector<vector<pair<int, int>>> adj(n), rev_adj(n);
        for (auto& edge : edges) {
            adj[edge[0]].push_back({edge[1], edge[2]});
            rev_adj[edge[1]].push_back({edge[0], edge[2]});
        }

        vector<vector<long long>> dist(n, vector<long long>(2, -1));
        using State = tuple<long long, int, int>;
        priority_queue<State, vector<State>, greater<State>> pq;

        pq.push({0, 0, 0});
        dist[0][0] = 0;

        while (!pq.empty()) {
            auto [d, u, switched] = pq.top();
            pq.pop();

            if (dist[u][switched] != -1 && d > dist[u][switched]) continue;
            if (u == n - 1) return d;

            for (auto& [v, w] : adj[u]) {
                if (dist[v][0] == -1 || dist[v][0] > d + w) {
                    dist[v][0] = d + w;
                    pq.push({dist[v][0], v, 0});
                }
            }

            if (!switched) {
                for (auto& [v, w] : rev_adj[u]) {
                    if (dist[v][0] == -1 || dist[v][0] > d + 2LL * w) {
                        dist[v][0] = d + 2LL * w;
                        pq.push({dist[v][0], v, 0});
                    }
                }
            }
        }

        return -1;
    }
};
